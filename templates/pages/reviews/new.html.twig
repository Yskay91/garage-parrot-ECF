{% extends 'base.html.twig' %}

{% block title %}Gge Parrot - Ajouter un service
{% endblock %}

{% block body %}
	<div class="text-center">
		<div class="container-fluid py-5">
			<h1 class="titrePages display-5 fw-bold">Ajouter un avis</h1>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-6">
				{{ form_start(form) }}
				<div class="form-error">
					{{ form_errors(form) }}
				</div>

				<div class="row">
					<div class="form-group">
						{{ form_label(form.name) }}
						{{ form_widget(form.name) }}
						<div class="form-errors">{{ form_errors(form.name) }}</div>
					</div>
					<div class="form-group">
						{{ form_label(form.comment) }}
						{{ form_widget(form.comment) }}
						<div class="form-errors">{{ form_errors(form.comment) }}</div>
					</div>
					<div class="form-group">
						{{ form_label(form.notes) }}
						{{ form_widget(form.notes) }}
						<div class="form-errors">{{ form_errors(form.notes) }}</div>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary mt-4">Ajouter</button>
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
