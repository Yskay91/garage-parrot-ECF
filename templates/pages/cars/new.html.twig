{% extends "base.html.twig" %}

{% block title %}Gge Parrot - Ajouter une annonce
{% endblock %}

{% block body %}
	<div class="text-center">
		<div class="container-fluid py-5">
			<h1 class="titrePages display-5 fw-bold">Mettre une voiture en vente</h1>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-6">
				{{ form_start(form) }}
				<div class="form-error">
					{{ form_errors(form) }}
				</div>

				<div class="row">

					<div class="form-group">
						{{ form_label(form.brand) }}
						{{ form_widget(form.brand) }}
						<div class="form-errors">{{ form_errors(form.brand) }}</div>
					</div>

					<div class="form-group">
						{{ form_label(form.features) }}
						{{ form_widget(form.features) }}
						<div class="form-errors">{{ form_errors(form.features) }}</div>
					</div>
					
					<div class="form-group">
						{{ form_label(form.model) }}
						{{ form_widget(form.model) }}
						<div class="form-errors">{{ form_errors(form.model) }}</div>
					</div>

					<div class="form-group">
						{{ form_label(form.price) }}
						{{ form_widget(form.price) }}
						<div class="form-errors">{{ form_errors(form.price) }}</div>
					</div>

					<div class="form-group">
						{{ form_label(form.kilometre) }}
						{{ form_widget(form.kilometre) }}
						<div class="form-errors">{{ form_errors(form.kilometre) }}</div>
					</div>

					<div class="form-group">
						{{ form_label(form.year) }}
						{{ form_widget(form.year) }}
						<div class="form-errors">{{ form_errors(form.year) }}</div>
					</div>

					<div class="form-group">
						{{ form_row(form.submit) }}
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
