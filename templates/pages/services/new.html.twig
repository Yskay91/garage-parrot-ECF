{% extends 'base.html.twig' %}

{% block title %}Gge Parrot - Ajouter un service
{% endblock %}

{% block body %}
	<div class="text-center">
		<div class="container-fluid py-5">
			<h1 class="titrePages display-5 fw-bold">Ajouter un service</h1>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-6">
				{{ form_start(form) }}
				<div class="form-error">
					{{ form_errors(form) }}
				</div>

				<div class="row">
					<div class="form-group">
						{{ form_label(form.category) }}
						{{ form_widget(form.category) }}
						<div class="form-errors">{{ form_errors(form.category) }}</div>
					</div>
					<div class="form-group">
						{{ form_label(form.name) }}
						{{ form_widget(form.name) }}
						<div class="form-errors">{{ form_errors(form.name) }}</div>
					</div>
					<div class="form-group">
						{{ form_label(form.description) }}
						{{ form_widget(form.description) }}
						<div class="form-errors">{{ form_errors(form.description) }}</div>
					</div>
					<div class="form-group">
						{{ form_label(form.price) }}
						{{ form_widget(form.price) }}
						<div class="form-errors">{{ form_errors(form.price) }}</div>
					</div>
					<div class="form-group">
						{{ form_label(form.is_actif) }}
						{{ form_widget(form.is_actif) }}
						<div class="form-errors">{{ form_errors(form.is_actif) }}</div>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary mt-4">Ajouter</button>
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
