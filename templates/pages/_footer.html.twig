<footer class="bd-footer mt-4">
	<div class="container">
		<hr/><br>
		<div class="row">
			<section class="col">
				<table class="">
					<thead>
						<tr>
							<th scope="col" class="bgTable"></th>
							<th scope="col" class="bgTable">Matin</th>
							<th scope="col" class="bgTable">Après-midi</th>
						</tr>
					</thead>
					<tbody>
						{% for hour in hour.getHours %}
							<tr>
								<th scope="row" class="pr-2">{{hour.dayWeek}}</th>
								<td class="px-2">
									{{ (hour.morningOpenHours is same as('Fermé')) ? '' : hour.morningOpenHours ~ " - "}}
									{{ (hour.morningCloseHours is same as('Fermé')) ? 'Fermé' : hour.morningCloseHours }}
								</td>
								<td class="px-2">
									{{ (hour.afternoonOpenHours is same as('Fermé')) ? '' : hour.afternoonOpenHours ~ " - " }}
									{{ (hour.afternoonCloseHours is same as('Fermé')) ? 'Fermé' : hour.afternoonCloseHours }}
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</section>
			<section class="col">
				{% for garage in garage.getGarages %}
					<div class="col-sm-12 text-center">
						<address>
							<strong>{{garage.name}}</strong><br/>
							{{garage.adresse}}<br/>
							{{garage.zipCode}}
							{{garage.city}}<br/>
						</address>

						<address>
							<strong>Mail et téléphone</strong><br/>
							<a href="mailto:#">{{garage.mail}}</a><br/>
							{{garage.phone}}
						</address>
					</div>
				{% endfor %}
			</section>
			<section class="col">
				&copy; Copyright 2023 Garage V. Parrot
			</section>
		</div>
	</div>
</footer>


