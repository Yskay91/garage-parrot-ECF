{% extends "base.html.twig" %}

{% block title %}Garage Parrot - Accueil
{% endblock %}

{% block body %}

	<div class="text-center">
		<div class="container-fluid py-5">
			<h1 class="titrePages display-5 fw-bold">Adresse du garage</h1>
			<p class="titrePages fs-4"></p>
		</div>
	</div>

	<div class="row">
		{% for garage in garages %}

			<div class="col-sm-12 col-md-6 col-lg-4 text-center">
				<address>
					<strong>{{garage.name}}</strong><br/>
					{{garage.adresse}}<br/>
					{{garage.zipCode}}
					{{garage.city}}<br/>
				</address>

				<address>
					<strong>Mail et téléphone</strong><br/>
					<a href="mailto:#">{{garage.mail}}</a><br/>
					{{garage.phone}}
				</address>
			</div>
		{% endfor %}
	</div>

{% endblock %}
