{% extends 'base.html.twig' %}

{% block title %}Gge Parrot - Modifier un mot de passe
{% endblock %}

{% block body %}
	<div class="text-center">
		<div class="container-fluid py-5">
			<h1 class="titrePages display-5 fw-bold">Modifier un mot de passe</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12 col-md-6">

			{% for message in app.flashes('warning') %}
				<div class="alert alert-warning mt-4">
					{{ message }}
				</div>
			{% endfor %}
			{{ form(form) }}
			</div>
		</div>
	{% endblock %}
