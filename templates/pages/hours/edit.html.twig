{% extends 'base.html.twig' %}

{% block title %}Gge Parrot - Modifier un r√¥le
{% endblock %}

{% block body %}
	<div class="text-center">
		<div class="container-fluid py-5">
			<h1 class="titrePages display-5 fw-bold">Modifier un horaire</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12 col-md-6">
			{{ form_start(form) }}
			<div class="form-error">
				{{ form_errors(form) }}
			</div>

			<div class="row">
				<div class="form-group">
					{{ form_label(form.dayWeek) }}
					{{ form_widget(form.dayWeek) }}
					<div class="form-errors">{{ form_errors(form.dayWeek) }}</div>
				</div>

				<div class="form-group">
					{{ form_widget(form.is_open) }}
					{{ form_label(form.is_open) }}
					<div class="form-errors">{{ form_errors(form.is_open) }}</div>
				</div>
				<div class="form-group">
					{{ form_row(form.submit) }}
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
