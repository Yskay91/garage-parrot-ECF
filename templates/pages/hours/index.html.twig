{% extends 'base.html.twig' %}

{% block title %}Gge Parrot - Horaire d'ouverture
{% endblock %}

{% block body %}
	<div class="text-center">
		<div class="container-fluid py-5">
			<h1 class="titrePages display-5 fw-bold">Horaire d'ouverture</h1>
			<p class="titrePages fs-4"></p>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-2">
			<a href="{{ path('hours.new') }}" class="btn btn-primary mb-4">Ajouter un horaire</a>
		</div>
	</div>
	{# Message de succès lors de l'ajout d'un horaire #}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success mt-4">
			{{ message }}
		</div>
	{% endfor %}
	<div class="row">
		<div class="col-sm-8">
			{% if hours|length > 0 %}
				<table class="table table-hover">
					<thead>
						<tr>
							<th scope="col">Jour de la semaine</th>
							<th scope="col">Matin</th>
							<th scope="col">Après-midi</th>
							<th scope="col">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for hour in hours %}
							<tr>
								<td scope="row">{{hour.dayWeek }}</td>
								<td>{{ (hour.getMorningOpenHours|date('H:i:s') != '00:00:00') ? hour.getMorningOpenHours|date('H:i') ~ ' -' : 'Fermé' }}
									{{ (hour.getMorningCloseHours|date('H:i:s') != '00:00:00') ? hour.getMorningCloseHours|date('H:i') : '' }}</td>
								<td>{{ (hour.getAfternoonOpenHours|date('H:i:s') != '00:00:00') ? hour.getAfternoonOpenHours|date('H:i') ~ ' -' : 'Fermé' }}
									{{ (hour.getAfternoonCloseHours|date('H:i:s') != '00:00:00') ? hour.getAfternoonCloseHours|date('H:i') : '' }}</td>
								<td>
									<a class="btn btn-outline-info btn-sm" href="{{ path('hours.edit', { id: hour.id }) }}">Modifier</a>
									<a class="btn btn-outline-danger btn-sm" href="{{ path('hours.delete', { id: hour.id }) }}">Supprimer</a>
								</td>
							</tr>
						</tbody>
					{% endfor %}
				</table>
			{% endif %}
		</div>
	</div>
{% endblock %}
